.rank_wrap{
  width: 100%;
}

.rank_item{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1px solid #fff;
}

.item_left{
  position: relative;  
  width: 150rpx;
}

.partner_img{
  position: absolute;
  top: 0;
  left: 66rpx;
}

.item_left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: url(https://friend-check.playonwechat.com/static/images/logo.jpg) no-repeat;
  background-size: 100%;
}

.item_con{
  color: #e93654;
  font-size: 30rpx;
}

.item_right{
  display: block;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ed7a77;
  color:#fff;
  border-radius: 30rpx;
  text-align: center;
  font-size: 26rpx;
}

.navigator-hover{
  color: #fff;
  background: #e99bac;
}

.person_info .login{
  display:block;
  width:180rpx;
  height:60rpx;
  line-height:60rpx;
  background:#2b3742;
  border:1px solid #0d938e;
  color:#3bffea;
  border-radius:10rpx;
  text-align:center;
  font-size:30rpx;
  margin: 0 auto;
}

.no_rank{
  font-size: 32rpx;
  color: #fff;
  text-align: left;
  padding:0 50rpx;
  line-height:50rpx;
}

.feedback{
  top: 120rpx;
}
.answer{
  background: #8bc9ee;
  color: #fff;
  position: absolute;
  top: 200rpx;
  right: -26rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 6rpx 42rpx 6rpx 10rpx;
}
.answer image{
  width: 40rpx;
  height: 30rpx;
  position: relative;
  top: 2rpx;
  right: 4rpx;
}