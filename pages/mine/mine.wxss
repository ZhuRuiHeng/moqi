/* pages/mine/mine.wxss */
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  background-size: cover; 
}

scroll-view{
  height: 100%;
}

.person_info{
  padding: 30rpx 0;
  width: 750rpx;
  text-align: center;
}

.person_info image{
  width: 160rpx;
  height: 160rpx;
  background: #000;
  margin: 0 auto 20rpx auto;
  display: block;
  border-radius: 50%;
  background: url(https://friend-check.playonwechat.com/static/images/logo.jpg) no-repeat;
  background-size: cover; 
}

.person_info view{
  font-size: 30rpx;
  color: #fff;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
}

