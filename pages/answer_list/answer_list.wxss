/* pages/answer_list/answer_list.wxss */
.container{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(https://friend-check.playonwechat.com/static/images/bg1.jpg) no-repeat;
  background-size: 100%; 
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.content{
  width: 100%;
  flex: 1;
}

.item.red .color{
  color: #e93656;
}
.item.blue .color{
  color: #44b7fd;
}
scroll-view{
  width: 100%;
  height: 1000rpx; 
}

.title{
  font-size: 40rpx;
  text-align: center;
  line-height: 70rpx;
  color: #000;
}

.tips{
  text-align: right;
  font-size: 26rpx;
  margin: 10rpx 0;
}
.tips1{
    color: #e93656;
}
.tips2{
    color: #44b7fd;
}
.item_title{
  font-size: 30rpx;
  line-height: 50rpx;
}

.choose{
  font-size: 28rpx;
  line-height: 50rpx;
}

.item{
  margin-bottom: 60rpx;
}

.bottom{
  text-align: right;
  font-size: 30rpx;
}

.search_wrap{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 90rpx;
  position: relative;
}
.sousuo{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 6rpx;
  left: 200rpx;
  z-index: 999;
}

.search_input{
  border-radius: 20rpx;
  background: #fff;
  border: 1rpx solid rgba(255,255,255,0.5);
  flex: 1;
  padding:6rpx 20rpx;
  font-size: 28rpx;
  color: #626262;
  text-align: center;
}

.search_btn{
  font-size: 30rpx;
  width: 80rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 50rpx;
  color: #626262;
}

.no_content{
  font-size: 30rpx;
  color: #999;
  margin: 50rpx;
}