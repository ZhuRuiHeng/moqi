/**index.wxss**/
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(https://friend-check.playonwechat.com/static/images/bg1.jpg) no-repeat;
  background-size: 100%; 
}

scroll-view{
  height: 100%;  
}

.formSubmit{
  width: 100%;
  text-align: center;
  display: block;
}

.nav_subject{
  color: #fff;
  font-size: 32rpx;
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #e48699;
  box-shadow:2px 2px 5px #d16c81;
  text-align: center;
  border-radius: 26rpx;
  border: 1rpx solid #d16c81;
  margin: 0 auto;
}
.navigator-hover {
  border: 0;
  color: #fff;
  background: #e99bac;
}

.logo_wrap{
  width: 260rpx;
  height: 360rpx;
  margin: 350rpx auto 200rpx auto;
  text-align: center;
}

.logo_wrap image.niceImg{
  width: 100%;
  height: 100%;
  border: 0;
  border-radius: 50%;
}
.logo_wrap image.girl{
    width: 40rpx;
    height:60rpx;
}
.logo_wrap image.boy{
    width: 60rpx;
    height:60rpx;
}

@-webkit-keyframes zoomIn {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3)
  }
  50% {
    opacity: 1
  }
}
@keyframes zoomIn {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    -ms-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3)
  }
  50% {
    opacity: 1
  }
}
.zoomIn {
  -webkit-animation: zoomIn 2s forwards;
  animation: zoomIn 2s forwards;
}



.tab_wrap{
  width: 750rpx;
  height: 110rpx;
  background: #21292e;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
}

.share_btn{
  width: 50%;
  text-align: center;
  padding:0;
  margin:0;
  background: transparent;
  font-size: 24rpx;
  line-height: 26rpx;
  color: #fff;
}

.share_btn image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}

.play{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  z-index: 1;
  border-radius: 50%;
  background: url(https://friend-check.playonwechat.com/static/images/stop_music.png) no-repeat;
  background-size: 100%;
}

.play.music_play{
 background: url(https://friend-check.playonwechat.com/static/images/music.png) no-repeat;
  background-size: 100%;
}

.music_play {
  -webkit-animation: play 3s linear infinite;
  animation: play 3s linear infinite;
}

@-webkit-keyframes play {
  from {
    -webkit-transform: rotate(0);
    transform: rotate(0);
  }
  to {
    -webkit-transform: rotate(-1080deg);
    transform: rotate(-1080deg);
  }
}

@keyframes play {
  from {
    -webkit-transform: rotate(0);
    transform: rotate(0);
  }
  to {
    -webkit-transform: rotate(-1080deg);
    transform: rotate(-1080deg);
  }
}

.tip{
  color:#fff;
  position:absolute;
  top:50rpx;
  left:130rpx;
  font-size:30rpx;
}
