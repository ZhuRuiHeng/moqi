/* pages/search/search.wxss */
@import "../answer_list/answer_list";
.search_wrap{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.search_input{
  border-radius: 10rpx;
  background: transparent;
  border: 1rpx solid rgba(255,255,255,0.5);
  flex: 1;
}

.search_btn{
  font-size: 30rpx;
  width: 80rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 50rpx;
}

.no_content{
  font-size: 30rpx;
  color: #999;
  margin: 50rpx;
}